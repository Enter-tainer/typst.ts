{
  "compilerOptions": {
    "types": ["web"],
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "declaration": true,
    "stripInternal": true,
    "lib": ["ES5", "ES6", "ES7", "ES2018"]
  },
  "include": ["src/**/*.ts"]
}
